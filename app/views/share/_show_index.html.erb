<table>
  <tr>
    <th>ID</th>
    <th colspan='4'>Содержание</th>
  </tr>
  <% resource&.each do |r| %>
  <tr>
    <td><%= r.id %></td>
    <td><%= r.try(:body) %></td>
    <td><%= r.try(:title) %></td>
    <td><%= r.try(:name) %></td>
    <td><%= r.try(:email) %></td>
  </tr>
  <% end %>
</table>
