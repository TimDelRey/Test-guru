<table>
  <tr>
    <th>ID</th>
    <th>Содержание</th>
    <th colspan='3'>Действия</th>
    <th><%= link_to 'Новая категория', new_category_path(resource) %></th>
  </tr>
  <% resource&.each do |r| %>
  <tr>
    <td><%= r.id %></td>
    <td><%= r.title %></td>
    <td><%= link_to 'Корректировать', edit_category_path(r) %></td>
    <td><%= link_to 'Подробнее', category_path(r) %></td>
  </tr>
  <% end %>
</table>