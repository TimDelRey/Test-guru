<table>
  <tr>
    <th>ID</th>
    <th>Содержание</th>
    <th colspan='3'>Действия</th>
    <th><%= link_to 'Новая категория', new_category_path %></th>
  </tr>
  <% resource&.each do |r| %>
  <tr>
    <td><%= r.id %></td>
    <td><%= r.title %></td>
    <td><%= link_to 'Корректировать', edit_category_path(r) %></td>
    <td><%= link_to 'Подробнее', category_path(r) %></td>
    <td><%= button_to 'Удалить', category_path(r), 
      method: :delete, 
      data: { confirm: 'Точно удаляем?' }, onclick: "return confirm('Точно удаляем?');" %></td>
  </tr>
  <% end %>
</table>