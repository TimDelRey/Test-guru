<table>
  <tr>
    <th>ID</th>
    <th>Содержание</th>
    <th colspan='3'>Действия</th>
    <th><%= link_to 'Создать ответ', new_question_answer_path if resource.answers&.count < 4 %></th>
    <th><%= link_to 'Назад', test_questions_path(resource.test) %></th>
  </tr>
  <% resource.answers&.each do |r| %>
  <tr>
    <td><%= r.id %></td>
    <td><%= r.body %></td>
    <td><%= link_to 'Корректировать', edit_answer_path(r) %></td>
    <td><%= button_to 'Удалить', answer_path(r), method: :delete, data: { confirm: 'Точно удаляем?' }, onclick: "return confirm('Точно удаляем?');" %></td>
  </tr>
  <% end %>
</table>