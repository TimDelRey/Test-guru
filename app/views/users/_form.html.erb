<%= form_with(model: @user, data: { turbo: false }) do |form| %>

<%= render 'share/errors', resource: @user %>

  <p>
    <%= form.label 'Введите имя пользователя: ' %>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label 'Введите электронную почту: ' %>
    <%= form.text_field :email %>
  </p>
  <p>
    <%= form.label 'Введите пароль: ' %>
    <%= form.password_field :password, id: :user_password %>
  </p>
  <p>
    <%= form.label 'Введите пароль повторно: ' %>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation  %>
  </p>



  <p><%= form.submit %></p>

  <p><%= link_to 'Назад', users_path %></p>
<% end %>
