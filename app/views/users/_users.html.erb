<table>
  <tr>
    <th>ID</th>
    <th>Имя</th>
    <th colspan='3'>Действия</th>
    <th><%= link_to 'Новый пользователь', new_user_path(resource) %></th>
  </tr>
  <% resource&.each do |r| %>
  <tr>
    <td><%= r.id %></td>
    <td><%= r.name %></td>
    <td><%= link_to 'Корректировать', edit_user_path(r) %></td>
    <td><%= link_to 'Подробнее', user_path(r) %></td>
  </tr>
  <% end %>
</table>