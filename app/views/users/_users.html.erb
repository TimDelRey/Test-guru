<table>
  <tr>
    <th>ID</th>
    <th>Имя</th>
    <th colspan='2'>Действия</th>
    <th><%= link_to 'Новый пользователь', new_user_path %></th>
  </tr>
  <% resource&.each do |r| %>
  <tr>
    <td><%= r.id %></td>
    <td><%= r.name %></td>
    <td><%= link_to 'Корректировать', edit_user_path(r) %></td>
    <td><%= link_to 'Подробнее', user_path(r) %></td>
    <td><%= button_to 'Удалить', user_path(r), 
      method: :delete, 
      data: { confirm: 'Точно удаляем?' }, onclick: "return confirm('Точно удаляем?');" %></td>
  </tr>
  <% end %>
