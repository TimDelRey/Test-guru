<table>
  <tr>
    <th>ID</th>
    <th>Содержание</th>
    <th colspan='3'>Действия</th>
    <th><%= link_to 'Новый тест', new_test_path(resource) %></th>
  </tr>
  <% resource&.each do |r| %>
  <tr>
    <td><%= r.id %></td>
    <td><%= r.title %></td>
    <td><%= link_to 'Корректировать', edit_test_path(r) %></td>
    <td><%= link_to 'Подробнее', test_path(r) %></td>
  </tr>
  <% end %>
</table>