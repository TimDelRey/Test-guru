<table>
  <tr>
    <th>ID</th>
    <th>Содержание</th>
    <th colspan='3'>Действия</th>
    <th><%= link_to 'Новый вопрос', new_test_question_path(@test.id) %></th>
    <th><%= link_to 'Назад', tests_path(resource) %></th>
  </tr>
  <% resource&.each do |r| %>
  <tr>
    <td><%= r.id %></td>
    <td><%= r.body %></td>
    <td><%= r.test_id %></td>
    <td><%= link_to 'Корректировать', edit_question_path(r) %></td>
    <td><%= link_to 'Ответы', question_answers_path(r) %></td>
    <td><%= button_to 'Удалить', question_path(r), 
      method: :delete, 
      data: { confirm: 'Точно удаляем?' } %></td>
  </tr>
  <% end %>
</table>